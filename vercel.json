{
    "version": 2,
    "builds": [
        {
            "src": "app.js",
            "use": "@vercel/node"
        }
    ],
    "routes": [
        {
            "src": ".*",
            "status": 200,
            
            "dest": "/app.js",
            "methods": ["GET", "POST"]
        }
    ],
    "env": {
        "PORT": "3000"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Content-Security-Policy",
                    "value":  "default-src 'self'; style-src 'self' 'unsafe-inline'; script-src 'self' https://code.jquery.com; style-src 'self' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com"
                }
            ]
        }
    ]
}
